{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true    
  },
  "include": [
    "src"
  ],
  "exclude": [
    "docs", "node_modules", "dist", "docs-dev"
  ]
}